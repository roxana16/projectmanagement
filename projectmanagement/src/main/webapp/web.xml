<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">



    <display-name>PMT</display-name>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>

    <!-- -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>grupa1.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!-- -->

    <!-- -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>grupa1.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <!-- -->

    <!-- -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>grupa1.SignupServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <!-- -->

    <!-- -->
    <servlet>
        <servlet-name>AssistanceServlet</servlet-name>
        <servlet-class>grupa1.AssistanceServlet</servlet-class>
    </servlet>

	<servlet-mapping>
		<servlet-name>AssistanceServlet</servlet-name>
		<url-pattern>/help</url-pattern>
	</servlet-mapping>
    <!-- -->

    <!-- -->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>grupa1.LoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- -->
</web-app>
